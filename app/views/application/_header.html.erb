<header class="bg-gray-100">
  <div class="px-5">
    <div class="w-full flex flex-row justify-between">
      <h1 class="my-5 font-mono text-2xl font-bold">
        <%= link_to root_path do %>
          Testbox
        <% end %>
      </h1>

      <% if user_signed_in? %>
        <p class="my-auto">
          <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete } %>
        </p>
      <% end %>
    </div>

    <hr>

    <div class="my-2">
      <small class="font-sans text-sm font-normal text-gray-500">A place to send your non-production emails.</small>
    </div>

    <div class="my-1">
      <%= render "flash_messages" %>
    </div>
  </div>

</header>
